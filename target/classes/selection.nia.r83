ЦЕЛОЕ выбор (ЦЕЛОЕ до) {
  ЕСЛИ (до < 2 && до > 0# || ЛОЖНО#) {
        ПИСАТЬ ("1-ый этап", до);
        выбор (2);
   } ИНАЧЕ ЕСЛИ (до >= 1.5 && до < 3) {
        ПИСАТЬ ("2-ой этап", до);
        выбор (5);
   } ИНАЧЕ {
        ПИСАТЬ ("3-ий этап", до);
   }  
   ПИСАТЬ ("Выход из рекурсии", до);
}

