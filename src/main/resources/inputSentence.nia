	ЛОГИЧЕСКОЕ циклить = ВЕРНО;
	СТРОКА операция = "";
	ЦЕЛОЕ оп1;
	ЦЕЛОЕ оп2;
	ПОКА(циклить) {
		операция = выбратьОперацию();
		ЕСЛИ(операция == "+") {
			оп1 = ввестиПараметр(1);
			оп2 = ввестиПараметр(2);
			сложение(оп1, оп2);
		} ИНАЧЕ ЕСЛИ(операция == "-") {
			оп1 = ввестиПараметр(1);
			оп2 = ввестиПараметр(2);
			вычитание(оп1, оп2);
		} ИНАЧЕ ЕСЛИ(операция == "*") {
			оп1 = ввестиПараметр(1);
			оп2 = ввестиПараметр(2);
			умножение(оп1, оп2);
		} ИНАЧЕ {
			циклить = ЛОЖНО;
			ПИСАТЬ(операция + " не является операцией калькулятора. Конец работы!");
		} 
		ПИСАТЬ();
	}
